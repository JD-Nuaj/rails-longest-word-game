<div class="container my-5">
  <div class="text-center mb-4">
    <h1 class="display-4 text-primary">Word Game</h1>
    <p class="lead">What is the longest word you can find?</p>
  </div>


  <div class="mb-4 text-center">
    <h3 class="fw-bold">Your Letters:</h3>
    <div class="d-inline-block p-3 bg-light rounded border">
      <%= @letters.join(" ") %>
    </div>
  </div>

  
  <div class="text-center">
    <form action="/score" method="post" data-turbo="false" class="d-flex flex-column align-items-center gap-3">
      <%= hidden_field_tag :letters, @letters.join(",") %>
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <input type="text" name="word" placeholder="Enter your word" class="form-control w-50">
      <input type="submit" class="btn btn-primary btn-lg">
    </form>
  </div>
</div>
